<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon
	id="repository.kemix"
	name="Kemix Add-on repository"
	version="2.0.1"
	provider-name="kemix">
	<extension point="xbmc.addon.repository" name="kemix Repo">
		<checksum>https://raw.githubusercontent.com/mystikxkemix/kodi-repo/master/addons.xml.md5</checksum>
		<info compressed="false">https://raw.githubusercontent.com/mystikxkemix/kodi-repo/master/addons.xml</info>
		<datadir zip="true">https://raw.githubusercontent.com/mystikxkemix/kodi-repo/master/zip/</datadir>
	</extension>

	<extension point="xbmc.addon.metadata">
		<language>en</language>
		<summary lang="en">Kemixs add-ons</summary>
		<description lang="en">All Kemixs add-ons</description>
		<disclaimer lang="en"></disclaimer>
		<platform>all</platform>
		<source>https://github.com/mystikxkemix/kemix-add-on-repo</source>
	</extension>
</addon>

<addon
	id="skin.kemixOSMC"
	version="2.0.0"
	name="Kemix's OMSC"
	provider-name="Kemix">
	<requires>
		<import addon="xbmc.gui" version="5.14.0"/>
	</requires>
	<extension point="xbmc.gui.skin" defaultthemename="Textures.xbt" effectslowdown="1.00" debugging="false">
		<res width="1920" height="1080" aspect="16:9" default="true" folder="16x9" />
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">Look and feel of OSMC modified by Kemix</summary>
		<disclaimer lang="en"/>
		<description lang="en">Design: Simon Brunton[CR]ReDesign : Kemix[CR]Code: Hitcher</description>
	</extension>
</addon>
</addons>
