<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.kemix" name="kemix Repo" version="1.0.0" provider-name="kemix">
	<extension point="xbmc.addon.repository" name="kemix Repo">
		<info compressed="false">https://raw.githubusercontent.com/mystikxkemix/kemix-addons/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/mystikxkemix/kemix-addons/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/mystikxkemix/kemix-addons/master/zip/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<language>en</language>
		<summary lang="en">Kemixs add-ons</summary>
		<description lang="en">All Kemixs add-ons</description>
		<disclaimer lang="en"></disclaimer>
		<platform>all</platform>
		<source>https://github.com/mystikxkemix/kemix-addons</source>
	</extension>
</addon>

<addon
	id="skin.kemixOSMC"
	version="1.0.5"
	name="Kemix's OMSC"
	provider-name="Kemix">
	<requires>
		<import addon="xbmc.gui" version="5.3.0"/>
		<import addon="script.favourites" version="5.0.2"/>
		<import addon="script.skinshortcuts" version="0.4.0"/>
		<import addon="service.skin.widgets" version="0.0.27"/>
	</requires>
	<extension point="xbmc.gui.skin" defaultthemename="Textures.xbt" effectslowdown="1.00" debugging="false">
		<res width="1920" height="1080" aspect="16:9" default="true" folder="16x9" />
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">Look and feel of OSMC modified by Kemix</summary>
		<disclaimer lang="en"/>
		<description lang="en">Design: Simon Brunton[CR]ReDesign : Kemix[CR]Code: Hitcher</description>
	</extension>
</addon>
</addons>
