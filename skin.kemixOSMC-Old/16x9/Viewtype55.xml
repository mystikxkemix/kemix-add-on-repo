<?xml version="1.0" encoding="utf-8"?>
<includes>
	<!--BestViewEver Movie-->
    <include name="Viewtype55">
		<control type="group">
			<visible>Control.IsVisible(55)</visible>
			<!-- Fanart -->
			<control type="image">
				<left>885</left>
				<top>180</top>
				<width>960</width>
				<height>490</height>
				<texture>$INFO[ListItem.Art(fanart)]</texture>
				<visible>!SubString(ListItem.Icon,Default)</visible>
				<animation effect="fade" start="0" end="100" time="350">Visible</animation>
				<animation effect="fade" start="100" end="0" time="350">Hidden</animation>
			</control>

			<!--Codecs-->
			<control type="group">
				<left>1150</left>
				<top>690</top>
				<control type="image">
					<height>48</height>
					<width>100</width>
					<align>center</align>
					<aspectratio>keep</aspectratio>
					<texture>$INFO[ListItem.VideoResolution,flagging/video/,.png]</texture>
				</control>
				<control type="image">
					<left>102</left>
					<height>48</height>
					<width>100</width>
					<align>center</align>
					<aspectratio>keep</aspectratio>
					<texture>$INFO[ListItem.AudioCodec,flagging/audio/,.png]</texture>
				</control>
				<control type="image">
					<left>204</left>
					<height>48</height>
					<width>100</width>
					<align>center</align>
					<aspectratio>keep</aspectratio>
					<texture>$INFO[ListItem.VideoAspect,flagging/aspectratio/,.png]</texture>
				</control>
				<control type="image">
					<left>306</left>
					<height>48</height>
					<width>100</width>
					<align>center</align>
					<aspectratio>keep</aspectratio>
					<texture>$INFO[ListItem.AudioChannels,flagging/audio/,.png]</texture>
				</control>
				<control type="image">
					<left>408</left>
					<height>48</height>
					<width>100</width>
					<align>center</align>
					<aspectratio>keep</aspectratio>
					<texture>$VAR[videocodec,flagging/video/,.png]</texture>
				</control>
			</control>
			
			<!-- Plot -->
			<control type="textbox">
				<left>850</left>
				<top>760</top>
				<width>840</width>
				<height>230</height>
				<label>$VAR[Plot]</label>
				<font>font13</font>
				<textcolor>white</textcolor>
				<visible>!SubString(ListItem.Icon,Default)</visible>
			</control>
			
			<control type="image">
				<left>840</left>
				<top>750</top>
				<width>860</width>
				<height>250</height>
				<texture>common/blackList.png</texture>
				<bordertexture border="5">common/whiteList_border.png</bordertexture>
				<visible>!SubString(ListItem.Icon,Default)</visible>
				<animation effect="fade" start="0" end="100" time="350">Visible</animation>
				<animation effect="fade" start="100" end="0" time="350">Hidden</animation>
			</control>

			<!-- Image -->
			<control type="image">
				<left>1722</left>
				<top>750</top>
				<width>146</width>
				<height>250</height>
				<texture colordiffuse="00ffffff">$INFO[ListItem.Icon]</texture>
				<visible>!SubString(ListItem.Icon,Default)</visible>
				<animation effect="fade" start="0" end="100" time="350">Visible</animation>
				<animation effect="fade" start="100" end="0" time="350">Hidden</animation>
			</control>

			<control type="image">
				<left>1700</left>
				<top>750</top>
				<height>250</height>
				<texture>$INFO[ListItem.Icon]</texture>
				<aspectratio>keep</aspectratio>
				<visible>!SubString(ListItem.Icon,Default)</visible>
				<animation effect="fade" start="0" end="100" time="350">Visible</animation>
				<animation effect="fade" start="100" end="0" time="350">Hidden</animation>
			</control>
			
			<!-- List -->
			<control type="image">
				<left>120</left>
				<top>180</top>
				<width>650</width>
				<height>820</height>
				<texture>common/blackList.png</texture>
				<bordertexture border="5">common/whiteList_border.png</bordertexture>
			</control>
			
			<control type="fixedlist" id="55">
				<left>40</left>
				<top>190</top>
				<width>710</width>
				<height>800</height>
				<onup>55</onup>
				<ondown>55</ondown>
				<onright>75</onright>
				<aligny>center</aligny>
				<onleft condition="!Skin.HasSetting(KioskMode)">3000</onleft>
				<viewtype label="31067">list</viewtype>
				<focusposition>4</focusposition>
				<pagecontrol>75</pagecontrol>
				<visible>Container.Content(Movies)</visible>
	
				<itemlayout width="630" height="80">
					<!--Name -->
					<control type="label">
						<left>130</left>
						<width>630</width>
						<height>80</height>
						<font>XSmall</font>
						<textcolor>ColorNF</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<!-- Watched status -->
					<control type="image">
						<top>30</top>
						<left>20</left>
						<width>20</width>
						<height>20</height>
						<texture>$VAR[StatusOverlay]</texture>
					</control>
				</itemlayout>				
				<focusedlayout width="630" height="80">
					<!--Name -->
					<control type="label">
						<left>110</left>
						<width>630</width>
						<height>80</height>
						<font>Small</font>
						<textcolor>ColorFO</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<!-- Watched status -->
					<control type="image">
						<top>30</top>
						<left>20</left>
						<width>20</width>
						<height>20</height>
						<texture>$VAR[StatusOverlay]</texture>
					</control>
				</focusedlayout>
			</control>
			
			<!-- Background ratio episodes -->
			<control type="image">
				<left>40</left>
				<top>180</top>
				<width>60</width>
				<height>820</height>
				<texture>common/blackList.png</texture>
				<bordertexture border="5">common/whiteList_border.png</bordertexture>
			</control>
			
			<!-- Scrollbar -->
			<control type="scrollbar" id="75">
				<left>800</left>
				<top>180</top>
				<width>25</width>
				<height>820</height>
				<texturesliderbackground border="10,14,10,14">common/ScrollbarVertical_background.png</texturesliderbackground>
				<texturesliderbar border="10,14,10,14">common/ScrollbarVertical.png</texturesliderbar>
				<texturesliderbarfocus border="10,14,10,14">common/ScrollbarVertical_focus.png</texturesliderbarfocus>
				<onleft>55</onleft>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
			</control>		
		</control>
	</include>
</includes>
