<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- progressdialog -->
	<defaultcontrol always="true">10</defaultcontrol>
	<controls>
		<!-- Background -->
		<include>DialogBackgroundImage</include>
		<!-- Main group -->
		<control type="group">
			<include>DialogAnimation</include>
			<centerleft>50%</centerleft>
			<centertop>50%</centertop>
			<width>800</width>
			<height>370</height>
			<!-- Background -->
			<control type="image">
				<centerleft>50%</centerleft>
				<width>100%</width>
				<height>100%</height>
				<texture>dialogs/DialogBackground.png</texture>
			</control>
			<!-- Heading -->
			<control type="label" id="1">
				<left>20</left>
				<top>10</top>
				<width>95%</width>
				<height>68</height>
				<font>Large</font>
				<align>center</align>
				<textcolor>ColorHeading</textcolor>
			</control>
			<!-- Details -->
			<control type="textbox" id="9">
				<centerleft>50%</centerleft>
				<top>86</top>
				<width>90%</width>
				<height>182</height>
				<font>XSmall</font>
				<textcolor>ColorDetails</textcolor>
			</control>
			<!--  Progress -->
			<control type="progress" id="20">
				<centerleft>50%</centerleft>
				<top>286</top>
				<width>80%</width>
				<height>20</height>
				<reveal>true</reveal>
				<info>System.Progressbar</info>
				<texturebg colordiffuse="22ffffff" border="3">common/ScrollbarHorizontal.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture colordiffuse="ColorFO" border="3">common/ScrollbarHorizontal.png</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>
			<!-- Button grouplist -->
			<control type="grouplist" id="9001">
				<centerleft>50%</centerleft>
				<bottom>10</bottom>
				<width>100%</width>
				<height>68</height>
				<itemgap>20</itemgap>
				<onleft>noop</onleft>
				<onright>noop</onright>
				<onup>noop</onup>
				<ondown>noop</ondown>
				<align>center</align>
				<defaultcontrol>10</defaultcontrol>
				<orientation>horizontal</orientation>
				<!-- OK -->
				<control type="button" id="10">
					<width>370</width>
					<height>68</height>
					<align>center</align>
					<onleft>noop</onleft>
					<onright>11</onright>
					<label>106</label>
					<font>Med</font>
				</control>
			</control>
		</control>
	</controls>
</window>