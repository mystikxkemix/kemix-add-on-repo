<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- volumebar -->
	<zorder>2</zorder>

	<controls>

		<control type="group">
			<centerleft>50%</centerleft>
			<top>15</top>
			<width>220</width>
			<height>180</height>
			<include>DialogAnimation</include>
			<animation effect="slide" start="0,0" end="470,0" time="100" condition="Window.IsActive(infodialog) | Window.IsActive(extendedprogressdialog)">Conditional</animation>
			<animation effect="fade" start="100" end="0" time="0" condition="Window.IsActive(mutebug)">Conditional</animation>

			<!-- Background image -->
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>220</width>
				<height>180</height>
				<texture>dialogs/DialogBackground.png</texture>
			</control>

			<!-- Heading -->
			<control type="label">
				<left>40</left>
				<top>50</top>
				<width>140</width>
				<height>33</height>
				<align>center</align>
				<scroll>true</scroll>
				<font>Small</font>
				<textcolor>ColorFO</textcolor>
				<label>13376</label>
			</control>

			<!-- Details -->
			<control type="label">
				<left>40</left>
				<top>104</top>
				<width>140</width>
				<height>27</height>
				<align>center</align>
				<scroll>true</scroll>
				<font>XSmall</font>
				<textcolor>ColorHeading</textcolor>
				<label>$INFO[Control.GetLabel(404),,%]</label>
			</control>

			<!-- Progress -->
			<control type="progress" id="404">
				<visible>false</visible>
				<info>player.volume</info>
			</control>

		</control>

	</controls>

</window>