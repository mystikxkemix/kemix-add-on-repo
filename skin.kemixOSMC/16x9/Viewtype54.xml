<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="Viewtype54">
		<control type="group">
			<visible>Control.IsVisible(54)</visible>
			<!-- Fanart -->
			<control type="image">
				<left>840</left>
				<top>180</top>
				<width>1053</width>
				<height>540</height>
				<texture>$INFO[ListItem.Art(fanart)]</texture>
				<visible>!SubString(ListItem.Icon,Default)</visible>
				<animation effect="fade" start="0" end="100" time="350">Visible</animation>
				<animation effect="fade" start="100" end="0" time="350">Hidden</animation>
			</control>
			
			<!-- Plot -->
			<control type="textbox">
				<left>850</left>
				<top>760</top>
				<width>840</width>
				<height>230</height>
				<label>$VAR[Plot]</label>
				<font>font13</font>
				<textcolor>white</textcolor>
				<visible>!SubString(ListItem.Icon,Default)</visible>
			</control>
			
			<control type="image">
				<left>840</left>
				<top>750</top>
				<width>860</width>
				<height>250</height>
				<texture>common/blackList.png</texture>
				<bordertexture border="5">common/whiteList_border.png</bordertexture>
				<visible>!SubString(ListItem.Icon,Default)</visible>
				<animation effect="fade" start="0" end="100" time="350">Visible</animation>
				<animation effect="fade" start="100" end="0" time="350">Hidden</animation>
			</control>

			<!-- Image -->
			<control type="image">
				<left>1722</left>
				<top>750</top>
				<width>146</width>
				<height>250</height>
				<texture colordiffuse="00ffffff">$INFO[ListItem.Icon]</texture>
				<visible>!SubString(ListItem.Icon,Default)</visible>
				<animation effect="fade" start="0" end="100" time="350">Visible</animation>
				<animation effect="fade" start="100" end="0" time="350">Hidden</animation>
			</control>

			<control type="image">
				<left>1700</left>
				<top>750</top>
				<height>250</height>
				<texture>$INFO[ListItem.Icon]</texture>
				<aspectratio>keep</aspectratio>
				<visible>!SubString(ListItem.Icon,Default)</visible>
				<animation effect="fade" start="0" end="100" time="350">Visible</animation>
				<animation effect="fade" start="100" end="0" time="350">Hidden</animation>
			</control>
			<!-- List -->
			<control type="image">
				<left>160</left>
				<top>180</top>
				<width>600</width>
				<height>820</height>
				<texture>common/blackList.png</texture>
				<bordertexture border="5">common/whiteList_border.png</bordertexture>
			</control>
			
			<control type="fixedlist" id="54">
				<left>40</left>
				<top>190</top>
				<width>720</width>
				<height>800</height>
				<onup>54</onup>
				<ondown>54</ondown>
				<onright>74</onright>
				<aligny>center</aligny>
				<onleft condition="!Skin.HasSetting(KioskMode)">3000</onleft>
				<viewtype label="31067">list</viewtype>
				<focusposition>4</focusposition>
				<pagecontrol>70</pagecontrol>
				<visible>Container.Content(TVShows) | Container.Content(Seasons) | Container.Content(Movies)</visible>
	
				<itemlayout width="590" height="80">
					<!--Name -->
					<control type="label">
						<left>130</left>
						<width>590</width>
						<height>80</height>
						<font>XSmall</font>
						<textcolor>ColorNF</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>center</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<!-- Episode Sawn -->
					<control type="label">
						<left>10</left>
						<width>30</width>
						<height>80</height>
						<font>XSmall</font>
						<textcolor>ColorNF</textcolor>
						<align>center</align>
						<aligny>center</aligny>
						<selectedcolor>selected</selectedcolor>
						<label>$INFO[ListItem.Property(WatchedEpisodes)]</label>
						<visible>!SubString(ListItem.Property(TotalEpisodes),0) + !SubString(ListItem.Label,..)</visible>
					</control>
					<!-- Separator -->
					<control type="label">
						<left>40</left>
						<width>20</width>
						<height>80</height>
						<font>XSmall</font>
						<textcolor>ColorNF</textcolor>
						<align>center</align>
						<aligny>center</aligny>
						<selectedcolor>selected</selectedcolor>
						<label>/</label>
						<visible>!SubString(ListItem.Property(TotalEpisodes),0) + !SubString(ListItem.Label,..)</visible>
					</control>
					<!-- Total episodes -->
					<control type="label">
						<left>60</left>
						<width>30</width>
						<height>80</height>
						<font>XSmall</font>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>ColorNF</textcolor>
						<selectedcolor>selected</selectedcolor>
						<label>$INFO[ListItem.Property(TotalEpisodes)]</label>
						<visible>!SubString(ListItem.Property(TotalEpisodes),0) + !SubString(ListItem.Label,..)</visible>
					</control>
				</itemlayout>
				
				<focusedlayout width="590" height="80">
					<!--Name -->
					<control type="label">
						<left>130</left>
						<width>590</width>
						<height>80</height>
						<font>Small</font>
						<textcolor>ColorFO</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>center</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<!-- Episode Sawn -->
					<control type="label">
						<left>10</left>
						<width>30</width>
						<height>80</height>
						<font>Small</font>
						<textcolor>ColorFO</textcolor>
						<align>center</align>
						<aligny>center</aligny>
						<selectedcolor>selected</selectedcolor>
						<label>$INFO[ListItem.Property(WatchedEpisodes)]</label>
						<visible>!SubString(ListItem.Property(TotalEpisodes),0) + !SubString(ListItem.Label,..)</visible>
					</control>
					<!-- Separator -->
					<control type="label">
						<left>40</left>
						<width>20</width>
						<height>80</height>
						<font>Small</font>
						<textcolor>ColorFO</textcolor>
						<align>center</align>
						<aligny>center</aligny>
						<selectedcolor>selected</selectedcolor>
						<label>/</label>
						<visible>!SubString(ListItem.Property(TotalEpisodes),0) + !SubString(ListItem.Label,..)</visible>
					</control>
					<!-- Total episodes -->
					<control type="label">
						<left>60</left>
						<width>30</width>
						<height>80</height>
						<font>Small</font>
						<align>center</align>
						<aligny>center</aligny>
						<textcolor>ColorFO</textcolor>
						<selectedcolor>selected</selectedcolor>
						<label>$INFO[ListItem.Property(TotalEpisodes)]</label>
						<visible>!SubString(ListItem.Property(TotalEpisodes),0) + !SubString(ListItem.Label,..)</visible>
					</control>
				</focusedlayout>
			</control>
			
			<!-- Background ratio episodes -->
			<control type="image">
				<left>40</left>
				<top>180</top>
				<width>110</width>
				<height>820</height>
				<texture>common/blackList.png</texture>
				<bordertexture border="5">common/whiteList_border.png</bordertexture>
				<visible>Container.Content(tvshows)</visible>
			</control>
			
			<!-- Scrollbar -->
			<control type="scrollbar" id="74">
				<left>800</left>
				<top>180</top>
				<width>25</width>
				<height>820</height>
				<texturesliderbackground border="10,14,10,14">common/ScrollbarVertical_background.png</texturesliderbackground>
				<texturesliderbar border="10,14,10,14">common/ScrollbarVertical.png</texturesliderbar>
				<texturesliderbarfocus border="10,14,10,14">common/ScrollbarVertical_focus.png</texturesliderbarfocus>
				<onleft>54</onleft>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<visible>Control.IsVisible(54)</visible>
			</control>
					
		</control>
	</include>
</includes>